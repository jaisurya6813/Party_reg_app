<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/and_back">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textColor="@color/lb_tv_white"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/edt2"
        android:layout_marginBottom="-80dp"
        android:id="@+id/chk"
        android:layout_centerInParent="true"
        android:checked="true"
        />


    <TextView
        android:id="@+id/instr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:text="Enter your Name and mobile number\n\t\t\t\t\t\t\t to register in Mokka party"
        android:textColor="@color/lb_tv_white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/instr"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-80dp"
        android:textColor="@color/lb_tv_white"
        android:textColorHint="@color/white"
        android:hint="Enter your name" />

    <EditText
        android:id="@+id/edt2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-80dp"
        android:hint="Enter your number"
        android:textColor="@color/lb_tv_white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chk"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-100dp"
        android:onClick="onClkButt"
        android:text="REGISTER" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chk"
        android:textColorHint="@color/white"
        android:text="Read..."
        android:textSize="20dp"
        android:layout_toEndOf="@+id/chk"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="-40dp"
        android:onClick="onClktxt"
        android:id="@+id/link"
        android:clickable="true"
        />










</RelativeLayout>